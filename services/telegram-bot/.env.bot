# Telegram Bot Configuration

# Bot settings
BOT_TOKEN=your-telegram-bot-token-here
BOT_USERNAME=your_bot_username
WEBHOOK_HOST=
WEBHOOK_PATH=/webhook
WEBHOOK_URL=

# API Gateway settings
API_GATEWAY_URL=http://api-gateway:8000
API_GATEWAY_TIMEOUT=30

# Redis settings for FSM
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
DEBUG=true

# User settings
ADMIN_USER_IDS=[]
ALLOWED_USER_IDS=[]

# Rate limiting
RATE_LIMIT_CALLS=30
RATE_LIMIT_PERIOD=60

# Polling settings (if not using webhooks)
POLLING=true
POLLING_TIMEOUT=30
POLLING_LIMIT=100