# FastAPI Gateway Configuration

# Application settings
APP_NAME=Bitrix24 API Gateway
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Bitrix24 API settings
BITRIX_BASE_URL=http://nginx:8588
BITRIX_WEBHOOK_URL=
BITRIX_CLIENT_ID=
BITRIX_CLIENT_SECRET=

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_TTL_USERS=300
CACHE_TTL_TASKS=180
CACHE_TTL_CONTACTS=600

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["*"]
MAX_CONNECTIONS_COUNT=10
MIN_CONNECTIONS_COUNT=1